<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19232f"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="18sp"
                    android:textColor="#fcf9fc"
                    android:textStyle="italic"
                    android:text="Câu 1" />

                <TextView
                    android:id="@+id/textCauHoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fffeff"
                    android:textStyle="italic"
                    android:text="Câu hỏi thứ nhất " />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/radGroup"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <CheckBox
                    android:id="@+id/chkA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="#ffffff"
                    android:textSize="14sp"
                    android:textColor="#fffeff"
                    android:layout_marginTop="5dp"
                    android:text="Trả lời 1 Trả lời 1 Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả lời 1Trả Trả lời 1lời 1Trả lời 1Trả lời 1Trả lời 1" />

                <CheckBox
                    android:id="@+id/chkB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Trả lời 2"
                    android:buttonTint="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textColor="#fcfbfc"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chkD"
                    android:buttonTint="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="Trả lời 4"
                    android:textColor="#fbfbfc"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chkC"
                    android:buttonTint="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textColor="#fcfafd"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="Trả lời 3" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
