<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".CauHoiDetailActivity">

    <TextView
        android:id="@+id/chiTietCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Chi tiết câu hỏi"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Loại câu hỏi" />

    <Spinner
        android:id="@+id/snipLoaiCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <EditText
        android:id="@+id/editndCauHoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nội dung câu hỏi" />

    <EditText
        android:id="@+id/editA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án A" />

    <EditText
        android:id="@+id/editB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án B" />

    <EditText
        android:id="@+id/editC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án C" />

    <EditText
        android:id="@+id/editD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án D" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án đúng"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/chkCauHoiA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án A" />

        <CheckBox
            android:id="@+id/chkCauHoiB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án B" />

        <CheckBox
            android:id="@+id/chkCauHoiC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án C" />

        <CheckBox
            android:id="@+id/chkCauHoiD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án D" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnXoaCauHoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="xóa" />

        <Button
            android:id="@+id/btnSaveCauHoi"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="lưu" />

    </LinearLayout>


</LinearLayout>